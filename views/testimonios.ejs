<% if (testimonials && testimonials.length > 0) { %>
  <section class="max-w-7xl mx-auto my-16 px-4 md:px-10 lg:px-20">
    <h2 class="section-title mb-10 text-center text-gray-900 text-2xl sm:text-3xl lg:text-4xl font-semibold">
      <%= traducciones.testimoniosTitulo || 'Testimonios de nuestros clientes' %>
    </h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <% testimonials.forEach(t => { %>
        <div class="bg-white rounded-2xl shadow-md p-6 transition transform hover:scale-105 hover:shadow-xl">
          <p class="text-gray-700 italic mb-4">“<%= t.comment %>”</p>
          <p class="text-gray-900 font-semibold">
            — <%= t.name %>, 
            <small class="text-gray-500 font-normal">
              <%= new Date(t.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
            </small>
          </p>
        </div>
      <% }) %>
    </div>
  </section>
<% } %>
