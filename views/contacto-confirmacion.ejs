<!-- views/contacto-confirmacion.ejs -->
<section class="min-h-[60vh] flex flex-col items-center justify-center px-6 py-16 sm:py-20 lg:py-24 bg-white text-center">
  <h1 class="section-title text-2xl sm:text-3xl md:text-4xl font-extrabold text-gray-900 mb-6">
    <%= traducciones.mensajeEnviadoTitulo || 'Mensaje enviado' %>
  </h1>

  <p class="max-w-xl text-gray-700 mb-8 text-lg sm:text-xl leading-relaxed">
    <%= traducciones.graciasPorContactar || 'Gracias por contactarnos' %>, 
    <strong class="text-gray-900"><%= nombre %></strong>. 
    <%= traducciones.teResponderemosPronto || 'Te responderemos pronto.' %>
  </p>

  <a 
    href="/" 
    class="inline-block btn-secondary bg-blue-600 hover:bg-blue-500 focus:outline-none focus:ring-4 focus:ring-blue-300 text-white font-semibold rounded-lg shadow-md px-8 py-3 text-lg sm:text-xl transition duration-300 ease-in-out"
    aria-label="<%= traducciones.volverAlInicio || 'Volver al inicio' %>"
  >
    <%= traducciones.volverAlInicio || 'Volver al inicio' %>
  </a>
</section>
