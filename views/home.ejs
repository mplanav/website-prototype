<!-- Fondo global -->
<div class="hero-bg" style="background-image: url('/images/hero-bg.jpg');"></div>

<!-- Contenido principal -->
<div class="pt-20 relative z-10">

  <!-- Sección de Inicio -->
  <section id="inicio" class="min-h-screen flex flex-col justify-center items-center px-4 md:px-10 lg:px-20 py-16 text-center relative z-10">
    <img src="/images/logo.jpg" alt="Logo del restaurante" class="logo mb-6 w-40 h-40 object-cover rounded-full border-4 border-[#3e1f0f] shadow-lg bg-white" />
    <h1 class="section-title text-4xl lg:text-5xl font-serif font-bold mb-6 text-[#3e1f0f]">
      <%= traducciones.home.welcomeTitle %>
    </h1>
    <p class="text-gray-700 max-w-2xl mx-auto mb-8 text-lg sm:text-xl font-light">
      <%= traducciones.home.descripcion %>
    </p>
    <a href="#reserva" class="btn-primary bg-[#c1440e] hover:bg-[#a1380c] text-black px-6 py-3 rounded-xl text-lg sm:text-xl transition">
      <%= traducciones.home.reserva %>
    </a>
  </section>

  <!-- Sección de Nuestra Historia -->
  <section id="historia" class="min-h-screen flex flex-col justify-center items-center px-4 md:px-10 lg:px-20 py-16 text-center relative z-10">
    <h2 class="text-4xl font-serif font-bold text-[#3e1f0f] mb-6">
      La Nostra Història
    </h2>
    <p class="text-gray-800 text-lg sm:text-xl leading-relaxed max-w-3xl">
      <%= traducciones.home.nuestra_historia %>
    </p>
  </section>

  <!-- Sección de Especialidad -->
  <section id="especialidad" class="min-h-screen relative flex items-center justify-center px-4 md:px-10 lg:px-20 py-16 text-center z-10">
    <div class="relative z-10 max-w-3xl px-4">
      <h2 class="text-4xl font-serif font-bold text-[#3e1f0f] mb-6">
        <%= traducciones.home.nuestra_especialidad %>
      </h2>
      <p class="text-gray-800 text-lg sm:text-xl leading-relaxed">
        <%= traducciones.home.especialidad_descripcion %>
      </p>
    </div>
  </section>

  <!-- Sección de Carta -->
  <section id="carta" class="min-h-screen flex flex-col justify-center items-center px-4 md:px-10 lg:px-20 py-16 text-center relative z-10">
    <h2 class="text-3xl font-serif font-bold text-[#3e1f0f] mb-6">
      <%= traducciones.home.cartaTitulo || 'Que oferim?' %>
    </h2>
    <p class="text-gray-700 max-w-2xl mx-auto mb-8 text-lg sm:text-xl">
      <%= traducciones.home.cartaDescripcion || 'Descubreix tots els nostres plats i especialitats' %>
    </p>
    <a href="/carta" class="btn-primary bg-[#c1440e] hover:bg-[#a1380c] text-white px-6 py-3 rounded-xl text-lg sm:text-xl transition">
      <%= traducciones.home.verCarta || 'Veure la carta' %>
    </a>
  </section>

  <!-- Sección de Testimonios -->
  <% if (testimonios && testimonios.length > 0) { %>
    <section id="testimonios" class="min-h-screen flex flex-col justify-center items-center px-4 md:px-10 lg:px-20 py-16 relative z-10">
      <h2 class="text-3xl font-serif font-bold mb-8 text-[#3e1f0f] text-center">
        <%= traducciones.testimoniosTitulo %>
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl w-full">
        <% testimonios.forEach(t => { %>
          <div class="testimonial bg-white/70 p-6 rounded-xl shadow-lg backdrop-blur-sm transition-transform duration-300 hover:scale-105">
            <p class="text-lg italic text-gray-700 mb-4">“<%= t.comentario %>”</p>
            <p class="text-sm text-gray-500">
              — <%= t.nombre %>, 
              <br />
              <small>
                <%= new Date(t.fecha).toLocaleDateString(lang || 'es-ES', { year: 'numeric', month: 'long', day: 'numeric' }) %>
              </small>
            </p>
          </div>
        <% }) %>
      </div>
    </section>
  <% } %>

  <!-- Sección de Reserva -->
  <section id="reserva" class="min-h-screen flex flex-col justify-center items-center px-4 md:px-10 lg:px-20 py-16 text-center relative z-10">
    <h2 class="text-3xl font-serif font-bold text-[#3e1f0f] mb-4">
      <%= traducciones.home.reservaTitle || 'Reserva la teva taula' %>
    </h2>
    <p class="text-gray-700 max-w-2xl mx-auto mb-8 text-lg sm:text-xl">
      <%= traducciones.home.reservaDescripcion || 'Reserva de manera senzilla a través del nostre sistema online.' %>
    </p>
    <a href="<%= langPath %>/reserva" class="btn-primary bg-[#c1440e] hover:bg-[#a1380c] text-white px-6 py-3 rounded-xl text-lg sm:text-xl transition">
      <%= traducciones.home.reserva %>
    </a>
  </section>

<!-- Sección de Contacto -->
<section id="contacto" class="min-h-screen flex flex-col justify-center items-center px-4 md:px-10 lg:px-20 py-16 text-center relative z-10">
  <h2 class="text-3xl font-serif font-bold text-[#3e1f0f] mb-4">
    <%= traducciones.home.contactoTitle || "Contacta'ns" %>
  </h2>
  <p class="text-gray-700 max-w-2xl mx-auto mb-8 text-lg sm:text-xl">
    <%= traducciones.home.contactoDescripcion || "Posa't en contacte amb nosaltres per a qualsevol tipus de consulta." %>
  </p>

  <!-- Botón principal -->
  <a href="<%= langPath %>/contacto" class="btn-primary bg-[#c1440e] hover:bg-[#a1380c] text-white px-6 py-3 rounded-xl text-lg sm:text-xl transition mb-8">
    <%= traducciones.home.contactoBoton || 'Contactar' %>
  </a>

  <!-- Nueva sección de enlaces -->
  <div class="mt-6">
    <h3 class="text-xl font-serif font-semibold text-[#3e1f0f] mb-4">Ens pots trobar:</h3>
    <div class="flex flex-col sm:flex-row items-center justify-center gap-6">
      
      <!-- Instagram -->
      <a href="https://www.instagram.com/elbrases_restaurant" target="_blank" class="flex items-center gap-2 text-[#3e1f0f] hover:text-[#c1440e] transition">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
          <path d="M7.75 2h8.5A5.75 5.75 0 0 1 22 7.75v8.5A5.75 5.75 0 0 1 16.25 22h-8.5A5.75 5.75 0 0 1 2 16.25v-8.5A5.75 5.75 0 0 1 7.75 2zm0 1.5A4.25 4.25 0 0 0 3.5 7.75v8.5A4.25 4.25 0 0 0 7.75 20.5h8.5a4.25 4.25 0 0 0 4.25-4.25v-8.5A4.25 4.25 0 0 0 16.25 3.5h-8.5zm8.75 2.25a.75.75 0 1 1 0 1.5.75.75 0 0 1 0-1.5zM12 7a5 5 0 1 1 0 10a5 5 0 0 1 0-10zm0 1.5a3.5 3.5 0 1 0 0 7a3.5 3.5 0 0 0 0-7z"/>
        </svg>
        Instagram
      </a>

      <!-- Teléfono -->
      <a href="tel:+34900111222" class="flex items-center gap-2 text-[#3e1f0f] hover:text-[#c1440e] transition">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
          <path d="M2.25 3A.75.75 0 0 1 3 2.25h3.92c.36 0 .67.25.74.6l.77 3.86c.05.25-.03.51-.2.7l-2.33 2.6a15.3 15.3 0 0 0 6.58 6.58l2.6-2.33c.19-.17.45-.25.7-.2l3.86.77c.35.07.6.38.6.74V21a.75.75 0 0 1-.75.75H18c-8.28 0-15-6.72-15-15V3z"/>
        </svg>
        +34 900 111 222
      </a>

      <!-- Ubicación -->
      <a href="https://maps.app.goo.gl/DMHGhRDuiNAyzyiNA" target="_blank" class="flex items-center gap-2 text-[#3e1f0f] hover:text-[#c1440e] transition">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2a7 7 0 0 0-7 7c0 5.25 7 13 7 13s7-7.75 7-13a7 7 0 0 0-7-7zm0 9.5a2.5 2.5 0 1 1 0-5a2.5 2.5 0 0 1 0 5z"/>
        </svg>
        Google Maps
      </a>

    </div>
  </div>
</section>
</div>
